<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />


 <!-- This is for the icon image library -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />


  <title>Clippit</title>
</head>

<body>
  <header>
    <% include ./partials/_header %>
  </header>

  <div class="container" style="margin-top: 160px;">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>Resource</h2>
        
        <div class="resource-card">
          <h2 class="resource-title">
            <%= rows[0].title; %>
          </h2>

          <div class="resource-description">
            <%= rows[0].description; %>
            <br>
            <p class="icons">
              <i class="far fa-heart"><span id="numLikes"><%= numLikes %><span></i>
              <i class="far fa-star"></i>
              <i class="far fa-comment-dots"></i>
            </p>

            <div class="row">
              <div class="col">
                <form action="/tags" method="POST" class="form-inline">
                  <input type="hidden" name="resource_id" value="<%= rows[0].resource_id %>">
                  <div class="form-group">
                    <input class="form-control" type="text" name="tag" placeholder="Please provide a tag">
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add Tag</button>
                  </div>
                </form>
              </div>
              <div class="col">
                <form action="/ratings" method="POST">
                  <input type="hidden" name="resource_id" value="<%= rows[0].resource_id %>">
                  <div class="form-group">
                    <select name="rating" id="rating" class="form-control rating-dropdown">
                      <optgroup label="Rating">
                        <option value="0">Choose your rating</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                      </optgroup>
                    </select>
                  </div>
                </form>
              </div>
            </div>

            <div class="comments">
              <% for (let commentId in comments) { %>
                <div class="card comment-card">
                  <div class="card-body comment-card-body">
                    <p class="card-title comment-card-title">
                      <%= comments[commentId].comment %>
                    </p>
                    <div class="card-text comment-card-text">
                      <em>by <%= comments[commentId].name %></em>
                    </div>
                  </div>
                </div>
                <br>
              <% } %>

              <form action="/comments" method="POST">
                <input type="hidden" name="resource_id" value="<%= rows[0].resource_id %>">
                <div class="form-group">
                  <textarea name="comment" id="add-comment" placeholder="What is your opinion about this resource?" maxlength="1000" required
                    class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Comment</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="/scripts/app.js"></script>
</body>





</html>
