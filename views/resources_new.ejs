<title>Add New Resource</title>
  <% include ./partials/_header %>
    <div class="wrapper">
      <h2>Add a new Resource</h2>
      <form class="form-inline make-column" action="/resources/new" method="POST">
        <div class="form-group">
          <strong><label for="title">Title:</label></strong>
          <input class="form-control" type="text" name="title" placeholder="Add Resource Title" style="width: 300px; margin: 1em; margin-left: 4.2em;" maxlength="255" required>
        </div>
        <div class="form-group">
          <strong><label for="URL">URL:</label></strong>
          <input class="form-control" type="text" name="URL" placeholder="http://" style="width: 300px; margin: 1em; margin-left: 4.2em;" maxlength="255" required>
        </div>
        <div class="form-group">
          <strong><label for="tag">Tag:</label></strong>
          <input class="form-control" type="text" name="tag" placeholder="Please provide a tag" style="width: 300px; margin: 1em; margin-left: 4.2em;" maxlength="255" >
        </div>
        <div class="form-group">
          <strong><label for="description">Description</label></strong>
          <textarea name="description" style="width: 290px; height: 80px; margin: 1em;" placeholder="Describe your resource!" maxlength="1000" required></textarea>  
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </body>
</html>
