  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />




</head>
<body>
<header>

<nav id="nav-bar">

  <h1 class="text-center"> Clippit </h1>

  <% if (locals.user) { %>

  <div>
    <form action="/resources/me" method="GET">
      <span class="float-left">
        <button type="submit" class="btn btn-primary">My Resources</button>
      </span>
    </form>

    <form action="/resources/new" method="GET">
      <span class="float-left">
        <button type="submit" class="btn btn-primary">Add Resources</button>
      </span>
    </form>


    <form class="form-inline right-side" action="/resources" method="GET">
      <div class="form-group mb-2">
        <label for="search"></label>
        <input class="form-control no-margin" type="text" name="search" placeholder="Search..." style="width: 300px;">
      </div>
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </div>

  <div class="make-flex">
    <h3 class="make-inline">Hello <%=name%> !</h3>
      <div>
        <form class="make-inline" action="/users/me" method="GET">
          <!-- <span class="float-left"> -->
            <button type="submit" class="btn btn-primary">Update Profile</button>
          <!-- </span> -->
        </form>

        <form class="make-inline" action="/logout" method="POST">
            <!-- <span class="float-left"> -->
              <button type="submit" class="btn btn-primary">Logout</button>
            <!-- </span> -->
        </form>
      </div>
  </div>



  </nav>

  <% } else { %>

<!-- Already have an account?  -->
<strong><a href="/login">Login</a></strong>

|
<!-- Not yet a member? -->
<strong><a href="/register">Register</a></strong>

  <% } %>



<br>


<br>

</header>


